<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@drawable/activity_main_bg"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Curved Header -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:background="@drawable/header_bg"
        android:paddingTop="40dp"
        android:paddingBottom="20dp">

        <ImageView
            android:id="@+id/header_icon"
            android:src="@drawable/ic_walk"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_centerHorizontal="true"
            android:contentDescription="Pedometer Icon" />

        <!-- ADDED layout_width and layout_height HERE -->
        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Basic Pedometer"
            android:textSize="26sp"
            android:textStyle="bold"
            android:textColor="#388E3C"
            android:layout_below="@id/header_icon"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="12dp" />

    </RelativeLayout>

    <!-- Content Area -->
    <LinearLayout
        android:orientation="vertical"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="24dp">

        <LinearLayout
            android:orientation="vertical"
            android:gravity="center"
            android:background="@drawable/white_card"
            android:padding="24dp"
            android:elevation="8dp"
            android:layout_marginBottom="40dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_steps"
                android:text="Steps: 0"
                android:textSize="40sp"
                android:textStyle="bold"
                android:textColor="#212121"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <Button
            android:id="@+id/btn_reset"
            android:text="Reset Steps"
            android:textColor="#FFFFFF"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:background="@drawable/rounded_red_btn"/>

        <Button
            android:id="@+id/btn_history"
            android:text="View History"
            android:textColor="#FFFFFF"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_green_btn"/>
    </LinearLayout>

</LinearLayout>




